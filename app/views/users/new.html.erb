<div class="max-w-md mx-auto">
  <h1 class="text-3xl font-bold mb-6">Sign Up</h1>

  <%= form_with(model: @user, local: true, class: "space-y-4") do |f| %>
    <% if @user.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
        <h2 class="font-bold">Error:</h2>
        <ul class="list-disc list-inside">
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= f.label :email, class: "block text-gray-700 font-semibold mb-1" %>
      <%= f.email_field :email, class: "w-full border rounded px-3 py-2" %>
    </div>

    <div>
      <%= f.label :password, class: "block text-gray-700 font-semibold mb-1" %>
      <%= f.password_field :password, class: "w-full border rounded px-3 py-2" %>
    </div>

    <div>
      <%= f.label :password_confirmation, class: "block text-gray-700 font-semibold mb-1" %>
      <%= f.password_field :password_confirmation, class: "w-full border rounded px-3 py-2" %>
    </div>

    <div>
      <%= f.submit "Sign Up", class: "w-full bg-blue-500 text-white font-semibold py-2 px-4 rounded hover:bg-blue-600" %>
    </div>
  <% end %>

  <div class="mt-4 text-center">
    Already have an account? <%= link_to "Log in", login_path, class: "text-blue-500 hover:text-blue-700" %>
  </div>
</div>