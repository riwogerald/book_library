<div class="container mx-auto px-4 py-8">
  <div class="max-w-2xl mx-auto">
    <h1 class="text-3xl font-bold mb-4"><%= @book.title %></h1>
    
    <div class="bg-white shadow rounded-lg p-6">
      <p class="text-xl mb-2">by <%= @book.author %></p>
      <p class="text-gray-600 mb-4">ISBN: <%= @book.isbn %></p>
      
      <div class="mb-6">
        <% if @book.available? %>
          <p class="text-green-600 font-semibold">Status: Available</p>
          <% if logged_in? %>
            <%= button_to 'Borrow Book', borrow_book_path(@book),
                class: 'mt-4 bg-blue-500 text-white px-6 py-2 rounded hover:bg-blue-600' %>
          <% end %>
        <% else %>
          <p class="text-red-600 font-semibold">Status: Borrowed</p>
          <% if logged_in? && @book.current_borrowing&.user == current_user %>
            <%= button_to 'Return Book', return_book_path(@book),
                class: 'mt-4 bg-green-500 text-white px-6 py-2 rounded hover:bg-green-600' %>
          <% end %>
        <% end %>
      </div>
      
      <%= link_to 'Back to Books', books_path,
          class: 'text-blue-500 hover:text-blue-700' %>
    </div>
  </div>
</div>
